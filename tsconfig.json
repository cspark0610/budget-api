{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "include": ["**/*"],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonJS",
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": false,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Database/*": ["./database/*"],
      "Contracts/*": ["./contracts/*"]
    },
    "types": [
      "@adonisjs/core",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid"
    ]
  }
}
